	status_command i3status --config ~/.config/i3/i3status.conf
	colors {
		statusline			#dddddd
		background			#222222
		focused_workspace	#808080 #808080 #dddddd
		inactive_workspace	#505050 #505050 #dddddd
		active_workspace	#505050 #505050 #dddddd
		urgent_workspace	#303030 #ff3030 #dddddd
	}
}

# Control cursor pointer with keyboard, inspired from: https://www.reddit.com/r/i3wm/comments/3btki2/use_the_mouse_cursor_from_the_keyboard
set $mod2 Mod1

mode "mouse" {

	set $slow 1
	set $fast 10
	set $ultrafast 100

	bindsym k exec xdotool mousemove_relative -- 0 -$slow
	bindsym j exec xdotool mousemove_relative -- 0 $slow
	bindsym h exec xdotool mousemove_relative -- -$slow 0
	bindsym l exec xdotool mousemove_relative -- $slow 0

	bindsym Shift+k exec xdotool mousemove_relative -- 0 -$fast
	bindsym Shift+j exec xdotool mousemove_relative -- 0 $fast
	bindsym Shift+h exec xdotool mousemove_relative -- -$fast 0
	bindsym Shift+l exec xdotool mousemove_relative -- $fast 0

	bindsym Shift+$mod2+k exec xdotool mousemove_relative -- 0 -$ultrafast
	bindsym Shift+$mod2+j exec xdotool mousemove_relative -- 0 $ultrafast
	bindsym Shift+$mod2+h exec xdotool mousemove_relative -- -$ultrafast 0
	bindsym Shift+$mod2+l exec xdotool mousemove_relative -- $ultrafast 0

	bindsym g exec xdotool click 1
	bindsym u exec xdotool click 4
	bindsym d exec xdotool click 5

	bindsym 0 exec xdotool mousemove 0 0

	# Move mouse in the middle of my screen
	bindsym 5 exec xdotool mousemove 683 384

	bindsym q mode "default"
}

bindsym $mod+$mod2+m mode "mouse"
